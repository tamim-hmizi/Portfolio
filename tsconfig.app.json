{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist/app",
    "declaration": true,  // Generate .d.ts files
    "declarationMap": true  // Optional, generate declaration maps
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
